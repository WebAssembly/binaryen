  ;; CHECK-NEXT:   (then
  ;; CHECK-NEXT:    (call $none)
  ;; CHECK-NEXT:   )
  ;; CHECK-NEXT:  )
  ;; CHECK-NEXT:  (if
  ;; CHECK-NEXT:   (select
